{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [true, {"ignoreAtRules": ["mixin", "include", "use"]}],
    "at-rule-empty-line-before": ["always", {"ignore": ["inside-block"]}],
    "block-opening-brace-newline-before": "always",
    "block-opening-brace-newline-after": "always",
    "block-opening-brace-space-before": null,
    "block-opening-brace-space-after": null,
    "color-function-notation": "legacy",
    "declaration-empty-line-before": null,
    "function-no-unknown": [true, {"ignoreFunctions": ["color.mix"]}],
    "no-descending-specificity": null,
    "no-invalid-position-at-import-rule": [true, {"ignoreAtRules": "use"}],
    "property-no-vendor-prefix": null,
    "selector-class-pattern": null,
    "selector-id-pattern": null
  }
}
